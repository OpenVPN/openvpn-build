{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchDepNames": [
                "src/vcpkg"
            ],
            "extends": [
                "schedule:weekly"
            ]
        },
        {
            "matchPackageNames": [
                "OpenVPN/easy-rsa"
            ],
            "extractVersion": "^v(?<version>.*)$"
        }
    ],
    "regexManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "windows-msi/version.m4$"
            ],
            "matchStrings": [
                "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sdefine\\(\\[.*?\\],\\s*\\[(?<currentValue>.*?)\\]\\)\\s"
            ]
        }
    ]
}
